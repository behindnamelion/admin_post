<table class="table table-bordered">
  <tbody>
    <tr>
      <th scope="row">작성자</th>
      <td><%= @business_question.user.name %></td>
    </tr>
    <tr>
      <th scope="row">작성 날짜</th>
      <td><%= @business_question.created_at.strftime('%Y-%m-%d %H:%M') %></td>
    </tr>
    <tr>
      <th scope="row">회사명</th>
      <td><%= @business_question.company %></td>
    </tr>
    <tr>
      <th scope="row">이메일 주소</th>
      <td><%= @business_question.email %></td>
    </tr>
    <tr>
      <th scope="row">핸드폰 번호</th>
      <td><%= @business_question.phone %></td>
    </tr>
    <tr>
      <th scope="row">문의 제목</th>
      <td><%= @business_question.title %></td>
    </tr>
    <tr>
      <th scope="row">문의 내용</th>
      <td><%= @business_question.body %></td>
    </tr>
  </tbody>
</table>

<%= link_to '수정', edit_business_question_path(@business_question), class: "btn btn-success" %> |
<%= link_to '목록', business_questions_path, class: "btn btn-info" %>
<br><br>