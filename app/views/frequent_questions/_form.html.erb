<%= form_with(model: frequent_question, local: true) do |form| %>
  <% if frequent_question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(frequent_question.errors.count, "error") %> prohibited this frequent_question from being saved:</h2>

      <ul>
      <% frequent_question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-bordered">
    <tbody>
      <tr>
        <th scope="row">카테고리</th>
        <td>
          <%= form.select :question_type, FrequentQuestion.question_types.keys, {}, { class: 'form-control' } %>
        </td>
      </tr>
      <tr>
        <th scope="row">전시여부</th>
        <td>
          <%= form.check_box :isshown %> 전시
        </td>
      </tr>
      <tr>
        <th scope="row">등록 날짜</th>
        <td><%= frequent_question.created_at %></td>
      </tr>
      <tr>
        <th scope="row">FAQ 질문</th>
        <td><%= form.text_field :title, class: "form-control" %></td>
      </tr>
      <tr>
        <th scope="row">FAQ 답변</th>
        <td>
          <%= tinymce :language => "ko" %>
          <%= form.text_area :body, id: :post_content, class: "form-control tinymce", rows: "15" %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="actions">
    <%= form.submit class: "btn btn-primary pull-right" %>
  </div>
<% end %>
