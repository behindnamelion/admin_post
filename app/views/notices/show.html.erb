<table class="table table-bordered">
  <tbody>
    <tr>
      <th scope="row">전시 여부</th>
      <td>
        <%= check_box "notice", "isshown", {:checked => @notice.isshown, :disabled => true} %>
      </td>
    </tr>
    <tr>
      <th scope="row">등록날짜</th>
      <td><%= @notice.created_at.strftime('%Y-%m-%d %H:%M') %></td>
    </tr>
    <tr>
      <th scope="row">제목</th>
      <td><%= @notice.title %></td>
    </tr>
    <tr>
      <th scope="row">내용</th>
      <td><%= @notice.body.html_safe %></td>
    </tr>
  </tbody>
</table>

<%= link_to '수정', edit_notice_path(@notice), class: "btn btn-success" %> |
<%= link_to '목록', notices_path, class: "btn btn-info" %>
